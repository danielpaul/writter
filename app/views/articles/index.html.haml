%p#notice= notice
%h1 Articles
%table
  %thead
    %tr
      %th{:colspan => "3"}
  %tbody
    - @articles.each do |article|
      %tr
        %td= link_to 'Show', article
        %td= link_to 'Edit', edit_article_path(article)
        %td= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= paginate @articles
= link_to 'New Article', new_article_path
