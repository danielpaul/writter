- title 'Reset your password'

.text-center.mb-4
  %h1.mb-1 Reset your password

.text-left

  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|

    = devise_error_messages!

    .form-group
      = f.label :email
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'you@example.com'

    = f.submit "Send Reset Instructions", class: 'btn btn-lg btn-block btn-primary mb-3'

    %hr

    .text-center
      %small.text-muted
        Remember your password?
        = succeed "." do
          = link_to 'Sign in', new_session_path(resource_name)

      %br

      %small.text-muted
        Don't have an account?
        = succeed "." do
          = link_to 'Sign up for free', new_registration_path(resource_name)
