<body class="text-center">
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-devise my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Forgot your password?</h5>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-devise" }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
              <br />
              <%= f.submit "Send me reset password instructions",class: "btn btn-lg btn-primary btn-block text-uppercase" %>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
